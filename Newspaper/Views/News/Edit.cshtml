@model Newspaper.Models.ViewModel.NewspaperViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>News</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="News.Title" class="control-label"></label>
                <input asp-for="News.Title" class="form-control" />
                <span asp-validation-for="News.Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="News.Body" class="control-label"></label>
                <textarea asp-for="News.Body" type="text" class="form-control" style="height: 200px;"></textarea>
                <span asp-validation-for="News.Body"></span>
            </div>
            <div class="form-group">
                <label asp-for="News.ImagePath" class="control-label"></label>
                <input asp-for="News.ImagePath" class="form-control" />
                <span asp-validation-for="News.ImagePath"></span>
            </div>
            <div class="form-group col-sm-6 col-md-5 col-lg-4">
                <div style="margin-left: -15px;">
                    <label asp-for="News.AuthorId" class="control-label"></label>
                    <select asp-for="News.AuthorId" asp-items="@(new SelectList(Model.Authors,"Id","Name"))" class="form-control"></select>
                </div>
            </div>
            <div class="form-group col-sm-6 col-md-5 col-lg-4">
                <div style="margin-left: -15px;">
                    <label asp-for="News.CategoryId" class="control-label"></label>
                    <select asp-for="News.CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","Name"))" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <a class="btn btn-danger" style="margin-right: 50px;" asp-action="Index">Cancel</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

